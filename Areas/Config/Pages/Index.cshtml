@page
@model IndexModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Configurator"];
    ViewData["SecondTitle"] = Localizer["Configuration and setup"];

}

@section Head  {
    <link rel="stylesheet" href="~/lib/mtd-ordermaker/config/css/mtd-config.css" asp-append-version="true" />
}
<div class="mdc-elevation--z2 mtd-config-place">
    <div mtd-data-href="/config/form" class="mdc-ripple-surface mtd-config-param">
        <div class="mtd-config-param-icon">
            <img src="~/lib/mtd-ordermaker/images/form.png" />
        </div>
        <div class="mtd-config-param-title" style="align-self:stretch">
            <span>@Localizer["Forms"]</span>
        </div>
        <div>
            <span>@Localizer["Templates setting"]</span>
        </div>
    </div>

    <div mtd-data-href="/config/interface" class="mdc-ripple-surface mtd-config-param">
        <div class="mtd-config-param-icon">
            <img src="~/lib/mtd-ordermaker/images/formGear.png" />
        </div>
        <div class="mtd-config-param-title">
            <span>@Localizer["Interface"]</span>
        </div>
        <div>
            <span>@Localizer["Display elements"]</span>
        </div>
    </div>

    <div mtd-data-href="/config/approval" class="mdc-ripple-surface mtd-config-param">
        <div class="mtd-config-param-icon">
            <img src="~/lib/mtd-ordermaker/images/formApproval.png" />
        </div>
        <div class="mtd-config-param-title">
            <span>@Localizer["Approval"]</span>
        </div>
        <div>
            <span>@Localizer["Chains settings"]</span>
        </div>
    </div>
</div>
<div style="float:right;">
    <p style="color:#7b7b7b" class="text-right">@Localizer["web application version"]: @System.Reflection.Assembly.GetEntryAssembly().GetName().Version</p>
</div>

@section Scripts {
    <script src="~/lib/mtd-ordermaker/config/js/mtd-config.js" asp-append-version="true"></script>
}