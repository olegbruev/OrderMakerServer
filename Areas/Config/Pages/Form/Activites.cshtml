@page
@model ActivitesModel


@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Activites"];
    ViewData["SecondTitle"] = Localizer["Form activites management"];
}

@section Breadcrumb {
    <li mtd-data-href="/config"><a href="/config">@Localizer["Configurator"]</a></li>
    <li mtd-data-href="/config/form"><a href="/config/form">@Localizer["Forms"]</a></li>
    <li mtd-data-href="/config/form/edit?id=@Model.MtdForm.Id"><a href="/config/form/edit?id=@Model.MtdForm.Id">@Localizer["Form editor"]</a></li>
    <li>@ViewBag.Title</li>
}

@section Action {
    <li mtd-data-href="/config/form/parts?formid=@Model.MtdForm.Id" class="mdc-list-item" role="menuitem">
        <span class="mdc-list-item__ripple"></span>
        <span class="mdc-list-item__graphic material-icons" aria-hidden="true">line_weight</span>
        <span class="mdc-list-item__text">@Localizer["Edit parts"]</span>
    </li>
    <li mtd-data-href="/config/form/fields?formid=@Model.MtdForm.Id" class="mdc-list-item" role="menuitem">
        <span class="mdc-list-item__ripple"></span>
        <span class="mdc-list-item__graphic material-icons" aria-hidden="true">view_list</span>
        <span class="mdc-list-item__text">@Localizer["Edit fields"]</span>
    </li>
}

<div class="mtd-desk">
    <div class="mtd-desk-panel">
        <div style="padding-left: 16px;">
            <button mtd-data-href="/config/form/actcreate?formId=@Model.MtdForm.Id" class="mdc-fab mdc-fab--extended" aria-label="Create">
                <div class="mdc-fab__ripple"></div>
                <span class="material-icons mdc-fab__icon">add</span>
                <span class="mdc-fab__label">@Localizer["Create"]</span>
            </button>
        </div>
    </div>
    <div class="mtd-desk-title">
        <div class="mtd-desk-title-header">
            @if (ViewBag.ImgSrcForm != string.Empty)
            {
                <img src="@ViewBag.ImgSrcForm" />
            }
        </div>
        <div class="mtd-desk-title-name">
            <span>@Model.MtdForm.Name</span>
        </div>
    </div>
</div>


