@page
@model IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Accounts"];
    ViewData["SecondTitle"] = Localizer["User list"];
}

@section Breadcrumb {
    <li><a href="/identity/users">@Localizer["Users"]</a></li>
    <li>@ViewBag.Title</li>
}

@section Head {
    <link rel="stylesheet" href="~/lib/mtd-ordermaker/users/css/mtd-users.css" />
}

<div class="mtd-desk">
    <div id="creator" class="mtd-desk-creator">
        <a mtd-data-href="/identity/users/accounts/create" class="mdc-fab mdc-fab--extended" aria-label="Create">
            <span class="material-icons mdc-fab__icon">person_add</span>
            <span class="mdc-fab__label">@Localizer["Create"]</span>
        </a>
    </div>
    <div class="mtd-desk-search">
        <form id="configFormText" method="get" enctype="multipart/form-data" style="width: 100%" autocomplete='off'>
            <div class="mdc-text-field mdc-text-field--fullwidth mdc-text-field--with-leading-icon">
                <i class="material-icons mdc-text-field__icon" tabindex="0" role="button">search</i>
                <input id="search-text" name="searchText" value="@Model.SearchText" class="mdc-text-field__input"
                       type="text"
                       placeholder="@Localizer["Search for text"]"
                       aria-label="Search for text"
                       autocomplete="off">
            </div>
        </form>
    </div>

    <div class="mtd-users-rows">
        <table>
            <thead>
                <tr>
                    <th>
                        @Localizer["Title name"]
                    </th>
                    <th>
                        @Localizer["Login name"]
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        @Localizer["Status"]
                    </th>
                    <th>
                        @Localizer["Policy"]
                    </th>
                    <th>
                        @Localizer["Role"]
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model.Accounts.OrderBy(x=>x.User.Title))
                {
                <tr mtd-data-href="/identity/users/accounts/edit?id=@person.User.Id" mtd-data-class="mtd-users-rows-selected" style="cursor: pointer">
                    <td>
                        @person.User.Title
                    </td>
                    <td>
                        @person.User.UserName
                    </td>
                    <td>
                        @person.User.Email
                    </td>
                    <td>
                        @{
                            string color = person.User.EmailConfirmed ? "green" : "red";
                        }
                        <i class="material-icons" style="color: @color">verified_user</i>
                    </td>
                    <td>
                        @if (person.MtdPolicy != null)
                        {
                            @person.MtdPolicy.Name
                        }
                    </td>
                    <td>
                        @{
                            string color2 = person.Role.NormalizedName == "ADMIN" ? "darkred" : "gray";
                        }
                        <div style="display: inline-block; vertical-align: central; padding: 5px 5px 7px 5px; font-size: small; font-weight: 500; background-color: @color2; box-sizing:border-box; border-radius: .25em; color: white">
                            @person.Role.Title
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
