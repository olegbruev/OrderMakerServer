@page
@model LoginModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Sign in"];
    ViewData["SubTitle"] = Localizer["Use your username and password to access the system"];
}

<div class="mdc-elevation--z8" style="max-width: 450px;margin: 0 auto; left: 50%; padding: 16px 16px 48px 16px; background-color: white">
    <span style="font-size:large; text-transform:uppercase; padding-top: 24px;">@ViewBag.Title</span>
    <form id="account" method="post" autocomplete="off">
        <div asp-validation-summary="All" style="color: red"></div>

        @{
            if (Model.ShowResend)
            {
                <p>
                    <a asp-page="./UnconfirmedEmail"
                       asp-route-userId="@Model.UserId">Resend verification?</a>
                </p>
            }
        }

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon" style="width: 100%; margin-top: 8px;">
            <i class="material-icons mdc-text-field__icon">person</i>
            <input id="login-user" asp-for="Input.UserName" type="text" class="mdc-text-field__input" />
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="login-user" class="mdc-floating-label">@Localizer["Login"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon" style="width: 100%; margin-top: 24px;">
            <i class="material-icons mdc-text-field__icon">lock</i>

            <input id="login-pass" asp-for="Input.Password" class="mdc-text-field__input" />

            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="login-pass" class="mdc-floating-label">@Localizer["Password"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>

        <div style="display: flex; padding-top: 16px; align-items:center">
            <div style="flex-grow: 1">
                <div class="mdc-form-field">
                    <div class="mdc-checkbox">
                        <input asp-for="Input.RememberMe" type="checkbox"
                               class="mdc-checkbox__native-control"
                               id="checkbox-1" />
                        <div class="mdc-checkbox__background">
                            <svg class="mdc-checkbox__checkmark"
                                 viewBox="0 0 24 24">
                                <path class="mdc-checkbox__checkmark-path"
                                      fill="none"
                                      d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                            </svg>
                            <div class="mdc-checkbox__mixedmark"></div>
                        </div>
                    </div>
                    <label for="checkbox-1">@Localizer["Remember Me"]</label>
                </div>
                <div style="padding-left: 12px;">
                    <a id="forgot-password" asp-page="./ForgotPassword">@Localizer["Forgot your password"]?</a>
                </div>
            </div>
            <div>
                <button class="mdc-button mdc-button--raised">@Localizer["Next"]</button>
            </div>
        </div>
    </form>
</div>
