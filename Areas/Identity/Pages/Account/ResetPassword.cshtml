@page
@model ResetPasswordModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Reset password"];
}

<div class="mdc-elevation--z8" style="max-width: 450px;margin: 0 auto; left: 50%; padding: 16px 16px 16px 16px; background-color: white">
    <span style="font-size:medium; text-transform:uppercase; padding-top: 24px;">@ViewBag.Title</span>
    <form method="post" autocomplete="off">
        <div asp-validation-summary="All" style="color: red"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon" style="width: 100%; margin-top: 8px;">
            <i class="material-icons mdc-text-field__icon">person</i>
            <input id="login-user" asp-for="Input.UserName" type="text" class="mdc-text-field__input" />
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="login-user" class="mdc-floating-label">@Localizer["Login name"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon" style="width: 100%; margin-top: 16px;">
            <i class="material-icons mdc-text-field__icon">lock</i>
            <input id="login-password" asp-for="Input.Password" type="password" class="mdc-text-field__input" />
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="login-password" class="mdc-floating-label">@Localizer["New password"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>

        <div class="mdc-text-field mdc-text-field--outlined mdc-text-field--with-leading-icon" style="width: 100%; margin-top: 16px;">
            <i class="material-icons mdc-text-field__icon">lock</i>
            <input id="login-password2" asp-for="Input.ConfirmPassword" type="password" class="mdc-text-field__input" />
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="login-password2" class="mdc-floating-label">@Localizer["Confirm password"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>

        <div style="padding-top: 24px; text-align: right">
            <button class="mdc-button mdc-button--raised" type="submit">@Localizer["Next"]</button>
        </div>
    </form>
</div>
