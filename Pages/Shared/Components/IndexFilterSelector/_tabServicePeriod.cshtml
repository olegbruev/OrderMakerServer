@model Models.Index.SelectorModelView
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

<div id="index-filter-service-period">
    <form method="post" action="/api/index/filter/add" enctype="multipart/form-data" autocomplete='off'>
        @Html.AntiForgeryToken()
        <input name="form-id" value="@Model.FormId" hidden />
        <div class="index-filter-content-tab-second">
            <div class="index-filter-content-tab-second--full">
                @await Component.InvokeAsync(typeof(MTDTextField), new MTDTextFieldTags
                    {
                        Id = "index-filter-date-start",
                        Label = "Date start",
                        Value = DateTime.Now.Date.ToShortDateString(),
                        LabelLocalized = true,
                        IconLeading = "far fa-calendar-alt",
                        Name = "periodStart",
                        Class = " mtd-data-datepicker ",
                        MTDTexFieldView = MTDTextFieldViews.Outlined
                    })
            </div>
            <div class="index-filter-content-tab-second--separator"></div>
            <div class="index-filter-content-tab-second--full">
                @await Component.InvokeAsync(typeof(MTDTextField), new MTDTextFieldTags
                   {
                       Id = "index-filter-date-finish",
                       Label = "Date finish",
                       Value = DateTime.Now.Date.ToShortDateString(),
                       LabelLocalized = true,
                       IconLeading = "far fa-calendar-alt",
                       Name = "periodStart",
                       Class = " mtd-data-datepicker ",
                       MTDTexFieldView = MTDTextFieldViews.Outlined
                   })
            </div>
        </div>

        <div class="index-filter-content-tab-foot">
            <button class="mdc-button mdc-button--raised">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">@Localizer["Apply"]</span>
            </button>
            <button class="mdc-button" type="button" onclick="IndexFilterClose()">
                <div class="mdc-button__ripple"></div>
                <span class="mdc-button__label">@Localizer["Cancel"]</span>
            </button>
        </div>
    </form>
</div>

