@model MtdStoreStack

@if (Model != null && Model.MtdStoreStackText != null)
{
    switch (ViewBag.typeStyle)
    {
        case "Columns":
            <div class="mtd-store-view-col-root">
                <div class="mtd-store-view-col-name">
                    @Model.MtdFormPartFieldNavigation.Name
                </div>
                <div class="mtd-store-view-col-value" style="height: 3em;">
                    @Model.MtdStoreStackText.Register
                </div>
            </div>
            break;
        default:
            <div class="mtd-store-view-row-line">
                <div class="mtd-store-view-row-name">
                    @Model.MtdFormPartFieldNavigation.Name
                </div>
                <div class="mtd-store-view-row-value" style="height: 3em;">
                    @Model.MtdStoreStackText.Register
                </div>
            </div>
            break;
    }
}