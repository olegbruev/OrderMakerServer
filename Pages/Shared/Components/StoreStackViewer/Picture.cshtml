@model MtdStoreStack

@if (Model != null && Model.MtdStoreStackFile != null)
{
    var base64 = Convert.ToBase64String(Model.MtdStoreStackFile.Register);
    var imgSrc = String.Format("data:{0};base64,{1}", Model.MtdStoreStackFile.FileType, base64);
    <img src="@imgSrc" />
}
else
{
    <div class="mtd-store-style-image"></div>
}

