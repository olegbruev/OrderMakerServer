@model MtdStoreStack

@if (Model != null && Model.MtdStoreStackDate != null)
{
    switch (ViewBag.typeStyle)
    {
        case "Columns":
            <div class="mtd-store-view-col-root">
                <div class="mtd-store-view-col-name">
                    @Model.MtdFormPartFieldNavigation.Name
                </div>
                <div class="mtd-store-view-col-value">
                    <span>@Model.MtdStoreStackDate.Register.ToShortDateString() @Model.MtdStoreStackDate.Register.ToShortTimeString()</span>
                </div>
            </div>
            break;

        default:
            <div class="mtd-store-view-row-line">
                <div class="mtd-store-view-row-name">
                    @Model.MtdFormPartFieldNavigation.Name
                </div>
                <div class="mtd-store-view-row-value">
                    <span>@Model.MtdStoreStackDate.Register.ToShortDateString() @Model.MtdStoreStackDate.Register.ToShortTimeString()</span>
                </div>
            </div>
            break;
    }
}


