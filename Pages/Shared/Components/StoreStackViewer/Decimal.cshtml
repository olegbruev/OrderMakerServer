@model MtdStoreStack

@{
    string value = "";
    string name = "";
    if (Model.MtdStoreStackDecimal != null && Model.MtdStoreStackDecimal.Register > 0)
    {
        value = Model.MtdStoreStackDecimal.Register.ToString().Replace(",", ".");
        name = Model.MtdFormPartFieldNavigation.Name;
    }
}


@switch (ViewBag.typeStyle)
{
    case "Columns":
        <div class="mtd-store-view-col-root">
            <div class="mtd-store-view-col-name">
                @name
            </div>
            <div class="mtd-store-view-col-value">
                @value
            </div>
        </div>
        break;
    default:
        <div class="mtd-store-view-row-line">
            <div class="mtd-store-view-row-name">
                @name
            </div>
            <div class="mtd-store-view-row-value">
                @value
            </div>
        </div>
        break;
}
