@model Data.MtdStoreStack

@{
    string value = "0.00";
    if (Model.MtdStoreStackDecimal != null && Model.MtdStoreStackDecimal.Register > 0)
    {
        value = Model.MtdStoreStackDecimal.Register.ToString().Replace(",", ".");
    }
}

@switch (ViewBag.TypeStyle)
{
    case "Columns":
        <div class="mtd-store-edit-col-root">
            <div class="mtd-ui-material-form">
                <input type="number" step="0.01" id="@Model.MtdFormPartFieldNavigation.Id" name="@Model.MtdFormPartFieldNavigation.Id" value="@value" />
                <label mtd-info="@Model.MtdFormPartFieldNavigation.Description" for="input" class="mtd-ui-text-label">@Model.MtdFormPartFieldNavigation.Name</label>
                <i class="mtd-ui-text-bottom"></i>
            </div>
        </div>
        break;
    default:
        <div class="mtd-ui-material-form">
            <input type="number" step="0.01" id="@Model.MtdFormPartFieldNavigation.Id" name="@Model.MtdFormPartFieldNavigation.Id" value="@value" />
            <label mtd-info="@Model.MtdFormPartFieldNavigation.Description" for="input" class="mtd-ui-text-label">@Model.MtdFormPartFieldNavigation.Name</label>
            <i class="mtd-ui-text-bottom"></i>
        </div>
        break;
}

